<div class="container">
  <div class="row">

    <div class="col-lg-12">
      <img src="/assets/img/cropped-burger.png" alt="burger" class="img-responsive center-block">
    </div>
  </div>

  <div class="row">
      <h1 class="header">Eat-Da-Burger!</h1>
    <div class="col-lg-12">
      <h3>Burgers You Haven't Devoured!</h3>
      <ul>
        {{#each burgers}} {{#unless this.devoured}}
        <li>
          <h5>{{this.id}}. {{this.burger_name}}
            <form action='burgers/updateOne/{{this.id}}' method='POST'>
              <input type='hidden' name='devoured' value='true'>
              <button type='submit' class="btn btn-default">DEVOUR THIS!</button>
            </form>
          </h5>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    </div>
    <div class="row">
    

    <div class="col-lg-12">
      <h3 class="text-muted">Devoured Burgers</h3>
      <ul>
        {{#each burgers}} {{#if this.devoured}}
        <li>
          <h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
    </div>
    
    <div class="row">
    <div class="col-lg-12">
    <h2>Add Your Burger!</h2>
    <form class="create-update-form" action="burgers/insertOne" method="POST">

      <div class="form-group">
        <label for="burg">Burger:</label>
        <input type="text" id="ca" name="name">
      </div>


      <button class="btn btn-default" type="submit">Submit</button>
    </form>
  </div>
  </div>